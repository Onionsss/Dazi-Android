<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/dashBoardVp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <FrameLayout
        android:background="@drawable/main_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.onion.center.view.HomeTabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            app:tl_iconHeight="20dp"
            app:tl_iconWidth="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_textSelectColor="#ff2d2d"
            app:tl_textUnselectColor="#999999"
            app:tl_textsize="10sp"
            app:tl_underline_height="0dp"/>
    </FrameLayout>
</LinearLayout>